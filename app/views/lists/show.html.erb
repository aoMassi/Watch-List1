<div class="position-relative">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.cnet.com/a/img/resize/1a674ecf994dc53a3756a94b8c8252f90e88c795/hub/2021/04/19/111f2cf0-1f0e-4884-8733-a4809195773c/shang-chi-poster-marvel.jpg?auto=webp&width=1092)">
    <h1><%= @list.name %></h1>
  </div>
 <div>
  <%= link_to 'add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary  mb-5' %>
  <%= link_to 'detete this list', list_path(@list), method: :delete, class: 'btn btn-danger mb-5', data: { confirm: 'Are you sure you want to delete this list?' } %>
  <%= link_to 'back to list', root_path %>
  </div>
  
  <% @list.bookmarks.each do  |bookmark|%> 
    <div class="card m-t:2" style="width: 18rem;">
      <img src= "<%= bookmark.movie.poster_url%>" class="card-img-top" alt="...">
      <div class="card-body">
        <h4 class="card-title"><%=bookmark.movie.title %></h4>
        <p class="card-text"><%=bookmark.movie.overview %></p>
        <p class="card-text">Rating: <%=bookmark.movie.rating %></p>
        <a href="#" class="btn btn-danger">Delete</a>
      </div>
   </div>
 <%end %>
